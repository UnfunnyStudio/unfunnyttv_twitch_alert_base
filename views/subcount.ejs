<!DOCTYPE html>
<html>

<head>
    <title>Rank</title>
    <style>
        @font-face {
            font-family: 'MyFont';
            src: url('/BeaufortforLOL-Bold.ttf') format('truetype');
            font-weight: normal;
            font-style: normal;
        }

        body {
            font-family: 'MyFont', sans-serif;
            margin: 0;
            padding: 0;
            font-size: 40px;
            color: white;
        }

        p {
            margin: 0;
            line-height:30px;
            text-align: right;
            /* Black outline using text-shadow */
            text-shadow:
                    -3px -3px 0 #000,
                    3px -3px 0 #000,
                    -3px 3px 0 #000,
                    3px 3px 0 #000;
        }
    </style>

</head>

<body>
<div id="main">
    <p>SUBS:100</p>
</div>
</body>
<script src="/socket.io/socket.io.js"></script>
<script>
    const socket = io();

    socket.on('subcount', (subcount) => {
        document.querySelector('p').textContent = `SUBS:${subcount}`;
    });

</script>
</html>